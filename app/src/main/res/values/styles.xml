        <!-- Customize your theme here. -->

    </style>

    <style name="UnameEditText0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_edt_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:theme">@style/Theme.App.Base0</item>
    </style>

    <style name="UnameEditText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_edt_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:theme">@style/Theme.App.Base1</item>
    </style>

    <style name="PasswordEditText0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_edt_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:theme">@style/Theme.App.Base0</item>
    </style>

    <style name="PasswordEditText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_edt_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLines">1</item>
        <item name="android:theme">@style/Theme.App.Base1</item>
    </style>


    <style name="NormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:textSize">@dimen/warning_text</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="SignUpTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_signup</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <style name="BtnSearchProducts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_search_product</item>
        <item name="android:textColor">@color/btn_search_product</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/btn_search_product</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BtnFacebook">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/btn_facebook</item>
        <item name="android:textColor">@color/colorFacebook</item>
        <item name="android:background">@drawable/facebook_shape</item>
        <item name="android:drawableStart">@drawable/ic_f_icon</item>
        <item name="android:text">@string/facebook</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_arrow_back_black_30dp</item>
    </style>

    <style name="BackButton2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/txt_signup</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_arrow_back_white_30dp</item>
    </style>

    <style name="BackButton3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_add_black_24dp</item>
    </style>

    <style name="SaveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_check_white_30dp</item>
    </style>



    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/button_state_list_animator</item>
        <item name="android:text">@string/log_in</item>
        <item name="android:textSize">@dimen/login_edt_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="LinkToShopeeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>"
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/link_to_shopee</item>
        <item name="android:text">@string/link_to_shopee3</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="LinkToStoreButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.4</item>"
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/selector_submit</item>
        <item name="android:text">Kết nối gian hàng</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SignupButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/custom_btn_signup</item>
        <item name="android:text">@string/sign_up</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/login_edt_text_size</item>
    </style>

    <style name="TxtProductLists">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_product_lists</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/txt_productList</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>
