<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ProductManagementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/addProductBtn"
            style="@style/BackButton3"
            android:layout_weight="1"
            android:minHeight="?attr/actionBarSize" />


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:background="@color/txt_signup"
            android:minHeight="?attr/actionBarSize">


            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:text="Sản phẩm"
                android:textColor="@color/backgroundColor"
                android:textSize="20dp" />

        </android.support.v7.widget.Toolbar>

        <ImageButton
            android:id="@+id/btnSavePassword"
            style="@style/SaveButton"
            android:layout_weight="1"
            android:minHeight="?attr/actionBarSize"
            android:src="@drawable/ic_search_black_32dp" />
    </LinearLayout>


    <Spinner
        android:id="@+id/spnStoreName"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rclProductList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>